<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1F2BF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 상단 이미지 -->
        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:adjustViewBounds="true"
            android:contentDescription="MOIPZ 소개 이미지"
            android:scaleType="fitCenter"
            android:src="@drawable/login_illustration" />

        <!-- 로그인 텍스트 -->

        <!-- 아이디 입력 -->
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#000000"
            android:hint="아이디"
            android:inputType="text" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#000000"
            android:hint="비밀번호"
            android:inputType="textPassword" />

        <!-- 로그인 버튼 -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="로그인"
            android:backgroundTint="#2D2D2D"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>



        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="8dp"
            android:text="로그인"
            android:textColor="#007BFF"
            android:textSize="14sp" />

        <!-- 간격 -->
        <Space
            android:layout_width="5dp"
            android:layout_height="1dp" />

        <!-- 비밀번호를 잊으셨나요 버튼 -->

        <!-- 링크 영역: 회원가입 / 비밀번호 찾기 -->
        <LinearLayout
            android:id="@+id/linkArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#087AEA"/>

            <TextView
                android:id="@+id/tvDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅣ"
                android:textColor="#666666"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <TextView
                android:id="@+id/tvFindPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:padding="8dp"
                android:textColor="#087AEA"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>