<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7BFFB0">

    <!-- 상단 검색 + 메뉴 -->
    <LinearLayout
        android:id="@+id/searchRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:paddingEnd="40dp"
                    android:hint="검색어 입력"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="@null"
                    android:importantForAccessibility="no"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="56dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_menu_24"
                android:contentDescription="@string/nav_menu"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- 스크롤 콘텐츠 -->
    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/searchRow"
        app:layout_constraintBottom_toTopOf="@id/customBottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 제목 라벨 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#E6E6E6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="&lt;데일리 추천 코디 선택 화면&gt;"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/moipz_bg"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- 코디 2장 나란히 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="2">

                <!-- 코디 1 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="360dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/imgCodiLeft"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ai_codi_left_exam"
                            android:scaleType="centerCrop"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPickLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="8dp"
                        android:text="코디 1 선택"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAllCaps="false"/>
                </FrameLayout>

                <!-- 코디 2 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="360dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/imgCodiRight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ai_codi_right_exam"
                            android:scaleType="centerCrop"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"/>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPickRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_margin="8dp"
                        android:text="코디 2 선택"
                        style="@style/Widget.MaterialComponents.Button"
                        android:textAllCaps="false"/>
                </FrameLayout>
            </LinearLayout>

            <!-- 새로고침 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="다른 코디로 새로고침하기"
                android:textAllCaps="false"
                app:icon="@drawable/ic_refresh_ai"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>

            <!-- 로고 배너 및 설명문 -->
            <ImageView
                android:id="@+id/logoBanner"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo_description"
                android:contentDescription="@null"
                android:importantForAccessibility="no"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="세상에 있는 모든 옷장 중 마지막 옷장의 옷을 찾아 입는 그날까지!\n나만의 옷장, MOIP-Z 앱"
                android:textColor="@color/moipz_bg"/>

        </LinearLayout>
    </ScrollView>

    <!-- 하단 커스텀 내비게이션 -->
    <FrameLayout
        android:id="@+id/customBottomBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/navigation_bar"
            android:scaleType="fitXY"
            android:contentDescription="@string/nav_bar"
            android:importantForAccessibility="no"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View android:id="@+id/hitMenu"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:clickable="true" android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_menu"/>

            <View android:id="@+id/hitBest"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:clickable="true" android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_best"/>

            <View android:id="@+id/hitHome"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:clickable="true" android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_home"/>

            <View android:id="@+id/hitFriends"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:clickable="true" android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_friends"/>

            <View android:id="@+id/hitMy"
                android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
                android:clickable="true" android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_my"/>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
